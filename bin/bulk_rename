#!/bin/env bash

# Author : Enan Ajmain
# Email  : 3nan.ajmain@gmail.com
# Github : https://github.com/3N4N

# A script to rename multiple files and directories

# counter variable
i=0

# a termporary file to store the file names
TMPFILE="/tmp/bulk_rename.txt"
if [ -f "$TMPFILE" ]; then
	rm "$TMPFILE"
fi

# get the file names under current directory
# put the names in an array and also the temporary file

if [ "$1" == "-a" ]; then
	for entry in .[^.]*
	do
		OLD["$i"]=$entry
		if [ -d "$entry" ]; then
			echo "$entry/" >> $TMPFILE
		else
			echo "$entry" >> $TMPFILE
		fi
		i=$((i + 1))
	done
	for entry in *
	do
		OLD["$i"]=$entry
		if [ -d "$entry" ]; then
			echo "$entry/" >> $TMPFILE
		else
			echo "$entry" >> $TMPFILE
		fi
		i=$((i + 1))
	done
else
	for entry in *
	do
		OLD["$i"]=$entry
		if [ -d "$entry" ]; then
			echo "$entry/" >> $TMPFILE
		else
			echo "$entry" >> $TMPFILE
		fi
		i=$((i + 1))
	done
fi

i=0

# open editor
$VISUAL "$TMPFILE"

sed -i 's/\///' "$TMPFILE"

# get the file names from the edited files
while read -r line; do
	NEW[$i]=$line
	i=$((i + 1))
done < "$TMPFILE"

i=0

# if the number of files under the current directory
# and in the temporary file is not same
# then don't do anything
# else rename the files
if [ "${#OLD[@]}" == "${#NEW[@]}" ]; then
	NOOFFILES=${#OLD[@]}
	while [ $i -lt $NOOFFILES ]
	do
		if [ "${OLD[$i]}" != "${NEW[$i]}" ];then
			echo "${OLD[$i]} -> ${NEW[$i]}"
			mv "${OLD[$i]}" "${NEW[$i]}"
		fi
		i=$((i + 1))
	done
else
	echo "You must not remove the entry of a file or directory!"
fi
